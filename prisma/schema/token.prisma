model Token {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now()) @map("created_at")

    email     String
    token     String @unique
    expiresIn String @map("expires_in")

    type EnumToken

    @@map("token")
}

enum EnumToken {
    VERIFICATION
    TWO_FACTOR
    PASSWORD_RESET
}
