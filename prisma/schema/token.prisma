model Token {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now()) @map("created_at")

    email     String
    token     String   @unique
    expiresIn DateTime @updatedAt @map("expires_in")

    type EnumToken

    @@map("token")
}

enum EnumToken {
    VERIFICATION
    TWO_FACTOR
    PASSWORD_RESET
}
